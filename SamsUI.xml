

<UI>


    <Frame name="SamsUiTopBar" mixin="SamsUiTopBarMixin" parent="UIParent" frameStrata="LOW" frameLevel="3" enableMouse="true" movable="true">
        <Size y="50"/>
        <Anchors>
            <Anchor point="TOPLEFT" x="0" y="0"/>
            <Anchor point="TOPRIGHT" x="0" y="0"/>
        </Anchors>

        <Layers>
            <Layer level="BACKGROUND">
                <Texture atlas="ClassHall_InfoBoxMission-BackgroundTile" horizTile="true">
                    <Anchors>
                        <Anchor point="TOPLEFT" x="0" y="-8"/>
                        <Anchor point="BOTTOMRIGHT" x="0" y="8"/>
                    </Anchors>
                </Texture>
            </Layer>
            <Layer level="DIALOG">
                <Texture parentKey="borderTexture" atlas="_BattleSlotTitle-Mid" horizTile="true" setAllPoints="true"/>
            </Layer>

            <Layer>
                <FontString parentKey="mainMenuLabel" inherits="GameFontNormal" text="Menu">
                    <Color r="1" g="1" b="1"/>
                    <Anchors>
                        <Anchor point="LEFT" relativePoint="RIGHT" x="-80" y="0"/>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>


<!-- AlliedRace-UnlockingFrame-ZoomIn -->
        <Frames>
            <Button parentKey="openMainMenuButton">
                <Size x="28" y="28"/>
                <Anchors>
                    <Anchor point="RIGHT" x="-8" y="0"/>
                </Anchors>
                <NormalTexture atlas="auctionhouse-ui-dropdown-arrow-up"/>
                <PushedTexture atlas="auctionhouse-ui-dropdown-arrow-down"/>
                <HighlightTexture atlas="chatframe-button-highlightalert"/>
            </Button>

            <Frame parentKey="mainMenu" hidden="true">
                <Anchors>
                    <Anchor point="TOPRIGHT" relativePoint="TOPRIGHT" x="-10" y="-45"/>
                </Anchors>
                <Layers>
                    <Layer level="BACKGROUND">
                        <!-- <Texture parentKey="background" atlas="ClassHall_InfoBoxMission-BackgroundTile" setAllPoints="true" alpha="0.6"/> -->
                    </Layer>
                </Layers>
            </Frame>

            <Button parentKey="openMinimapButtonsButton">
                <Size x="28" y="28"/>
                <Anchors>
                    <Anchor point="RIGHT" x="-110" y="0"/>
                </Anchors>
                <NormalTexture atlas="auctionhouse-ui-dropdown-arrow-up"/>
                <PushedTexture atlas="auctionhouse-ui-dropdown-arrow-down"/>
                <HighlightTexture atlas="chatframe-button-highlightalert"/>
            </Button>

            <Frame parentKey="minimapButtonsContainer" frameStrata="LOW" frameLevel="2" alpha="0" hidden="true">
                <Animations>
                    <AnimationGroup parentKey="anim" setToFinalAlpha="true">
                        <Alpha parentKey="fadeIn" duration="0.33" fromAlpha="0" toAlpha="1" smoothing="OUT"/>
                        <Translation parentKey="translate" duration="0.33" offsetX="0" offsetY="-45" smoothing="OUT"/>
                    </AnimationGroup>
                </Animations>
                <Size x="0" y="0"/>
                <Anchors>
                    <Anchor point="TOPRIGHT" relativePoint="TOPRIGHT" relativeKey="$parent.openMinimapButtonsButton" x="-50" y="-9"/>
                </Anchors>
                <Layers>
                    <Layer level="BACKGROUND">
                        <!-- <Texture parentKey="background" atlas="transmog-set-iconrow-background" setAllPoints="true" alpha="1.0"/> -->
                    </Layer>
                </Layers>
            </Frame>




            <Button parentKey="openCurrencyButton">
                <Size x="140" y="24"/>
                <Anchors>
                    <Anchor point="LEFT" x="10" y="0"/>
                </Anchors>

                <NormalTexture atlas="questitemborder"/>
                <PushedTexture atlas="questitemborder"/>
                <HighlightTexture atlas="questitemborder"/>

                <Layers>
                    <Layer level="OVERLAY">
                        <FontString parentKey="text" inherits="GameFontNormalSmall">
                            <Color r="1" g="1" b="1"/>
                            <Size x="130" y="22"/>
                            <Anchors>
                                <Anchor point="CENTER" x="0" y="0"/>
                            </Anchors>
                        </FontString>
                    </Layer>
                </Layers>
            </Button>

        </Frames>

        <Scripts>
            <OnLoad method="OnLoad"/>
            <OnEvent method="OnEvent"/>
        </Scripts>

    </Frame>





    <Frame name="SamsUiPlayerBar" mixin="SamsUiPlayerBarMixin" frameStrata="LOW" frameLevel="4">

        <Size x="200" y="40"/>

        <Anchors>
            <Anchor point="TOPRIGHT" relativeTo="SamsUiTopBar" relativePoint="BOTTOM" x="-45" y="4"/>
        </Anchors>

        <Layers>
            <Layer level="BACKGROUND">
                <Texture parentKey="background" setAllPoints="true" atlas="ClassHall_StoneFrame-BackgroundTile" alpha="0.8"/>
            </Layer>
            <Layer level="BORDER">
                <Texture atlas="_BattleSlotFrame-Divider" horizTile="true">
                    <Size y="8"/>
                    <Anchors>
                        <Anchor point="LEFT" x="0" y="0"/>
                        <Anchor point="RIGHT" x="0" y="0"/>
                    </Anchors>
                </Texture>
                <Texture atlas="_BattleSlotFrame-Divider" horizTile="true">
                    <Size y="8"/>
                    <Anchors>
                        <Anchor point="BOTTOMLEFT" x="0" y="-6"/>
                        <Anchor point="BOTTOMRIGHT" x="0" y="-6"/>
                    </Anchors>
                </Texture>
            </Layer>
            <Layer level="ARTWORK">
                <Texture parentKey="portrait">
                    <Size x="58" y="58"/>
                    <Anchors>
                        <Anchor point="RIGHT" relativePoint="LEFT" x="5" y="-2"/>
                    </Anchors>
                </Texture>
            </Layer>
            <Layer level="OVERLAY">
                <Texture parentKey="portraitRing" atlas="auctionhouse-itemicon-border-white">
                    <Size x="80" y="80"/>
                    <Anchors>
                        <Anchor point="RIGHT" relativePoint="LEFT" x="16" y="-3"/>
                    </Anchors>
                </Texture>
            </Layer>
        </Layers>

        <Frames>
            <StatusBar parentKey="healthBar" useParentLevel="true" minValue="0" maxValue="100" defaultValue="50" orientation="HORIZONTAL">
                <Size y="17"/>
                <Anchors>
                    <Anchor point="TOPLEFT"  x="0" y="0"/> <!-- set this to -25 and remove the toright x value if using a full fill texture -->
                    <Anchor point="TOPRIGHT" x="0" y="0"/>
                </Anchors>
                <BarTexture file="Interface\TargetingFrame\UI-StatusBar"/>
                <!-- <BarTexture atlas="_BattleSlotTitle-BG"/>> -->
                <!-- <BarTexture atlas="Artifacts-Warlock-Header"/> -->
                <BarColor r="0.0" g="1.0" b="0.0" a="0.9"/>

                <Layers>
                    <Layer level="OVERLAY">
                        <FontString parentKey="text" inherits="GameFontNormal">
                            <Color r="1" g="1" b="1"/>
                            <Size x="180" y="17"/>
                            <Anchors>
                                <Anchor point="CENTER" x="0" y="0"/>
                            </Anchors>
                        </FontString>
                    </Layer>
                </Layers>

            </StatusBar>

            <StatusBar parentKey="powerBar" useParentLevel="true" minValue="0" maxValue="100" defaultValue="50" orientation="HORIZONTAL">
                <Size y="17"/>
                <Anchors>
                    <Anchor point="BOTTOMLEFT"  x="0" y="1"/> <!-- set this to -25 and remove the toright x value if using a full fill texture -->
                    <Anchor point="BOTTOMRIGHT" x="0" y="1"/>
                </Anchors>
                <BarTexture file="Interface\TargetingFrame\UI-StatusBar"/>
                <!-- <BarTexture atlas="_BattleSlotTitle-BG"/>> -->
                <!-- <BarTexture atlas="Artifacts-Warlock-Header"/> -->
                <BarColor r="0.0" g="0.0" b="1.0" a="0.9"/>

                <Layers>
                    <Layer level="OVERLAY">
                        <FontString parentKey="text" inherits="GameFontNormal">
                            <Color r="1" g="1" b="1"/>
                            <Size x="180" y="17"/>
                            <Anchors>
                                <Anchor point="CENTER" x="0" y="0"/>
                            </Anchors>
                        </FontString>
                    </Layer>
                </Layers>

            </StatusBar>
        </Frames>


        <Scripts>
            <OnLoad method="OnLoad"/>
            <OnEvent method="OnEvent"/>
            <OnUpdate method="OnUpdate"/>
        </Scripts>

    </Frame>






<!-- Start-VersusSplash -->

