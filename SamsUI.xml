                <Layers>
                    <Layer level="OVERLAY">
                        <FontString parentKey="text" inherits="GameFontNormal">
                            <Color r="1" g="1" b="1"/>
                            <Size x="180" y="17"/>
                            <Anchors>
                                <Anchor point="CENTER" x="0" y="0"/>
                            </Anchors>
                        </FontString>
