

<UI>

    <Frame name="SamsUiListviewTemplate" mixin="SamsUiListviewMixin" virtual="true">
        <Frames>
            <Frame parentKey="scrollBox" inherits="WowScrollBoxList"/>
            <EventFrame parentKey="scrollBar" inherits="WowTrimScrollBar">
                <Anchors>
                    <Anchor point="TOPRIGHT"/>
                    <Anchor point="BOTTOMRIGHT"/>
                </Anchors>
            </EventFrame>
        </Frames>
        <Scripts>
            <OnLoad method="OnLoad"/>
        </Scripts>
    </Frame>


    <Button name="SamsUiTopBarDropdownMenuButton" mixin="SamsUiTopBarDropdownMenuButtonMixin" virtual="true">
        <Attributes>
            <Attribute name="type1" value="macro"/>
        </Attributes>
        <NormalTexture atlas="auctionhouse-ui-dropdown-arrow-up"/>
        <PushedTexture atlas="auctionhouse-ui-dropdown-arrow-down"/>
        <HighlightTexture atlas="chatframe-button-highlightalert"/>
    </Button>


    <Button name="SamsUiTopBarInsetButton" mixin="SamsUiTopBarInsetButtonMixin" virtual="true">

        <NormalTexture atlas="questitemborder"/>
        <PushedTexture atlas="questitemborder"/>
        <HighlightTexture atlas="questitemborder"/>

        <Layers>
            <Layer level="OVERLAY">
                <FontString parentKey="text" inherits="GameFontNormalSmall">
                    <Color r="1" g="1" b="1"/>
                    <Anchors>
                        <Anchor point="CENTER" x="0" y="0"/>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>

        <Scripts>
            <OnLoad method="OnLoad"/>
            <OnShow method="OnShow"/>
        </Scripts>
    </Button>


    <Button name="SamsUiTopBarMainMenuButton" mixin="SamsUiTopBarMainMenuButtonMixin" inherits="InsecureActionButtonTemplate" registerForClicks="LeftButtonUp,RightButtonUp" virtual="true">
        <!-- <NormalTexture atlas="garrlanding-mission-inprogress"/>
        <PushedTexture atlas="garrlanding-mission-inprogress"/> -->
        <NormalTexture atlas="GarrMission_FollowerListButton"/>
        <PushedTexture atlas="GarrMission_FollowerListButton"/>
        <HighlightTexture atlas="PetList-ButtonHighlight"/>
        <Animations>
            <AnimationGroup parentKey="anim" setToFinalAlpha="true">
                <Alpha parentKey="fadeIn" duration="0.33" fromAlpha="0" toAlpha="1" smoothing="OUT"/>
                <!-- <Translation parentKey="translate" duration="1" offsetX="0" offsetY="-28" smoothing="OUT"/> -->
            </AnimationGroup>
        </Animations>

        <Layers>
            <Layer level="OVERLAY">
                <FontString parentKey="text" inherits="GameFontNormal">
                    <Color r="1" g="1" b="1"/>
                    <Anchors>
                        <Anchor point="CENTER" x="0" y="0"/>
                    </Anchors>
                </FontString>

                <Texture parentKey="icon">
                    <Size x="28" y="28"/>
                    <Anchors>
                        <Anchor point="LEFT" x="0" y="0"/>
                    </Anchors>
                </Texture>
            </Layer>
        </Layers>

        <Scripts>
            <OnLoad method="OnLoad"/>
            <!-- <OnClick method="OnClick"/> -->
            <OnMouseDown method="OnMouseDown"/>
            <OnShow method="OnShow"/>
            <OnHide method="OnHide"/>
        </Scripts>
    </Button>


    <Button name="SamsUiConfigPanelMenuButtonTemplate" mixin="SamsUiConfigPanelMenuButtonMixin" virtual="true">
        <NormalTexture file="Interface/AuctionFrame/AuctionHouse">
            <TexCoords left="0.0059765625" right="0.2616015625" top="0.857421875" bottom="0.940" />
        </NormalTexture>
        <PushedTexture file="Interface/AuctionFrame/AuctionHouse">
            <TexCoords left="0.0059765625" right="0.2616015625" top="0.857421875" bottom="0.940" />
        </PushedTexture>
        <HighlightTexture atlas="PetList-ButtonHighlight"/>

        <Layers>
            <Layer level="OVERLAY">
                <FontString parentKey="text" inherits="GameFontNormal">
                    <Color r="1" g="1" b="1"/>
                    <Anchors>
                        <Anchor point="CENTER" x="0" y="0"/>
                    </Anchors>
                </FontString>
            </Layer>
			<Layer level="ARTWORK">

			</Layer>
        </Layers>

        <Scripts>
            <OnLoad method="OnLoad"/>
            <OnClick method="OnClick"/>
        </Scripts>
    </Button>
</UI>